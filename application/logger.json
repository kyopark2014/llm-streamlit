{
    "version":1,
    "disable_existing_loggers":false,
    "formatters":{
       "basic":{
          "format":"%(asctime)s | %(name)s | %(levelname)s | %(message)s",
          "datefmt":"%Y-%m-%d %H:%M:%S"
       }
    },
    "handlers":{
       "console":{
          "class":"logging.StreamHandler",
          "level":"DEBUG",
          "formatter":"basic"
       },
       "file":{
          "class":"logging.FileHandler",
          "level":"DEBUG",
          "formatter":"basic",
          "filename":"app.log"
       }
    },
    "root":{
       "handlers":[
          "console",
          "file"
       ],
       "level":"WARNING"
    },
    "loggers":{
       "__main__":{
          "level":"INFO",
          "handlers":[
             "console",
             "file"
          ],
          "propagate":true
       },
       "main_logging_config":{
          "level":"DEBUG",
          "handlers":[
             "console",
             "file"
          ],
          "propagate":false
       }
    }
 }